    "jwt-decode": "^2.2.0"
  },
  "devDependencies": {
    "@types/form-data": "^2.2.1",
    "@types/jwt-decode": "^2.2.1",
    "electron": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.2.4"
  },
  "files": [
    "dist/",
    "package.json"
  ]
}
